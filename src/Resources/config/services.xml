<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="lla.doctrine_graphql.service.graphql.class">LLA\DoctrineGraphQLBundle\Service\GraphQL</parameter>
    </parameters>

    <services>
        <service id="lla.doctrine_graphql.service.graphql" class="%lla.doctrine_graphql.service.graphql.class%">
            <argument type="expression">service(parameter('lla.doctrine_graphql.cache_service'))</argument>
            <argument type="expression">service(parameter('lla.doctrine_graphql.entity_manager_service'))</argument>
            <argument type="expression">service(parameter('lla.doctrine_graphql.logger_service'))</argument>
            <argument type="service" id="logger" />
            <tag name="kernel.cache_warmer" />
            <tag name="kernel.cache_clearer" />
        </service>
    </services>
</container>
